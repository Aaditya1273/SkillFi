# Backend environment variables
# Copy this file to .env and fill in real values

# PostgreSQL connection string for Prisma
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/skillfi?schema=public"

# Server
PORT=8000
FRONTEND_URL=http://localhost:3000

# On-chain integration
# Toggle listeners (0=off, 1=on)
ONCHAIN_LISTENERS=0
# EVM RPC endpoint for ethers.js provider
RPC_URL=http://localhost:8545
# Marketplace contract address to listen to
MARKETPLACE_CONTRACT_ADDRESS=0xYourMarketplaceAddress

# AI Dispute Resolver
# Set OPENAI_API_KEY to enable LLM-based dispute analysis; otherwise heuristics are used
OPENAI_API_KEY=
# Optional: override model
AI_MODEL=gpt-4o-mini
